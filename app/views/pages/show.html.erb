        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">Support Tickets <a href="/tickets/new" class="pull-right"><i class="fa fa-plus-circle" aria-hidden="true"></i> New Ticket</a></div>
                <div class="panel-body">
                    <table class="table table-striped table-hover">
                      <thead>
                        <tr>
                          <th>#</th>
                          <th>Company</th>
                          <th>Subject</th>
                          <th>Created</th>
                          <th>Members</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% @tickets.each do |ticket| %>
                          <tr class="clickable-row" data-href='/tickets/<%= ticket.id %>'>
                            <th scope="row"><%= ticket.id %></th>
                            <td><%= ticket.company.title %></td>
                            <td><%= ticket.title %></td>
                            <td><%= time_ago_in_words(ticket.created_at) %> ago</td>
                            <td>TODO</td>
                          </tr>
                        <% end %>
                      </tbody> 
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

